<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <ImageView
        android:contentDescription="@null"
	    android:id="@+id/photo_item_imageView"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:scaleType="centerCrop" />
    
    <TextView 
        android:id="@+id/photo_item_text"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/photo_item_imageView" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/photo_item_text"
        android:orientation="horizontal" >
    
	    <ImageView 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	    	android:layout_height="match_parent" 
	    	android:contentDescription="@null"
	    	android:src="@drawable/ic_action_good"
	    	android:layout_gravity="left"
	    	android:gravity="center" />
	       
	    <TextView 
	        android:id="@+id/photo_item_likeCount"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	    	android:layout_height="match_parent"
	    	android:layout_gravity="left"
	    	android:gravity="center" />
	    
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_weight="6"
	    	android:layout_height="match_parent"
	    	android:gravity="center" />
	       
	   	<ImageView 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	    	android:layout_height="match_parent" 
	    	android:contentDescription="@null"
	    	android:src="@drawable/ic_action_chat"
	    	android:layout_gravity="right"
	    	android:gravity="center" />
	      	
	   	 <TextView 
	        android:id="@+id/photo_item_commentCount"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	    	android:layout_height="match_parent"
	    	android:layout_gravity="right"
	    	android:gravity="center" />
   	 
   	 </LinearLayout>
           
</RelativeLayout>
